<!-- 
  Receive flow data over UDP, convert them into JSON and provide them as
  a server on local port
-->
<ipfixcol2>
  <!-- Input plugins -->
  <inputPlugins>
    <input>
      <name>UDP collector</name>
      <plugin>udp</plugin>
      <params>
        <!-- List on port 2055 -->
        <localPort>2055</localPort>
        <!-- Bind to all local adresses -->
        <localIPAddress></localIPAddress>
      </params>
    </input>
  </inputPlugins>

  <!-- Output plugins -->
  <outputPlugins>
    <output>
      <name>JSON output</name>
      <plugin>json</plugin>
      <params>
        <!-- JSON format paramters -->
        <tcpFlags>formatted</tcpFlags>
        <timestamp>formatted</timestamp>
        <protocol>formatted</protocol>
        <ignoreUnknown>false</ignoreUnknown>
        <ignoreOptions>true</ignoreOptions>
        <nonPrintableChar>true</nonPrintableChar>

        <!-- Output methods -->
        <outputs>
            <print>
                <name>Printer to standard output</name>
            </print>
        </outputs>
      </params>
    </output>
  </outputPlugins>
</ipfixcol2>
